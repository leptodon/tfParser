<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Users" table="users" schema="homestead">
        <id name="id" column="id"/>
        <property name="firstname" column="firstname"/>
        <property name="lastname" column="lastname"/>
        <property name="email" column="email"/>
        <property name="emailVerifiedAt" column="email_verified_at"/>
        <property name="password" column="password"/>
        <property name="bio" column="bio"/>
        <property name="apiToken" column="api_token"/>
        <property name="rememberToken" column="remember_token"/>
        <property name="passwordChangedAt" column="password_changed_at"/>
        <property name="createdAt" column="created_at"/>
        <property name="updatedAt" column="updated_at"/>
    </class>
</hibernate-mapping>
